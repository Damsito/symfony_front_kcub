{% if pages.firstPage != pages.lastPage %}
    <nav
            id="pagination"
            style="border-top: none !important"
    >
        <ul class="pagination">
            {% if pages.firstPage and pages.firstPage != pages.currentPage %}
                <li
                        class="page-item"
                >
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.firstPage})) }}">
                        {{ "debut"|trans }}
                    </a>
                </li>
                {% else %}
                    <li class="page-item disabled">
                        <a class="page-link"> {{ "debut"|trans }} </a>
                    </li>
            {% endif %}
            {% if not pages.previousPage and not pages.firstPage %}
                <li
                        class="page-item disabled"
                >
                    <a class="page-link previous"></a>
                </li>
            {% endif %}
            {% if pages.previousPage %}
                <li class="page-item">
                    <a class="page-link previous" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.previousPage})) }}" ></a>
                </li>
            {% endif %}
            {% if not pages.previousPage %}
                <li class="page-item disabled">
                    <a class="page-link previous"></a>
                </li>
            {% endif %}
            {% if pages.firstPage != pages.currentPage %}
                <li class="page-item">
                    <a class="page-link"  href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.firstPage})) }}"
                    >{{ pages.firstPage }}
                    </a>
                </li>
            {% endif %}

            {% if pages.previousPage and pages.previousPage - 2 > pages.firstPage %}
                <li
                        class="page-item disabled"
                >
                    <span class="page-link">...</span>
                </li>
            {% endif %}
            {% if pages.previousPage and pages.previousPage - 1 > pages.firstPage  %}
                <li
                        class="page-item"
                >
                    <a class="page-link"  href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.previousPage - 1})) }}"
                    >{{ pages.previousPage - 1 }}
                    </a>
                </li>
            {% endif %}
            {% if pages.previousPage and pages.previousPage > pages.firstPage %}
                <li
                        class="page-item"
                >
                    <a class="page-link"
                       href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.previousPage})) }}"
                    >{{ pages.previousPage }}
                    </a>
                </li>
            {% endif %}

            <li class="page-item active">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.currentPage})) }}"
                >{{ pages.currentPage }}
                </a>
            </li>
            {% if pages.nextPage and pages.nextPage < pages.lastPage %}
                <li
                        class="page-item"
                >
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.nextPage})) }}"
                    >{{ pages.nextPage }}
                    </a>
                </li>
            {% endif %}
            {% if pages.nextPage and pages.nextPage + 1 < pages.lastPage %}
                <li
                        class="page-item"
                >
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.nextPage + 1})) }}"
                    >{{ pages.nextPage + 1 }}
                    </a>
                </li>
            {% endif %}
            {% if pages.nextPage and pages.nextPage + 2 < pages.lastPage %}
                <li
                        class="page-item disabled"
                >
                    <span class="page-link">...</span>
                </li>
            {% endif %}
            {% if pages.lastPage != pages.currentPage %}
                <li class="page-item">
                    <a
                            class="page-link"
                            href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.lastPage})) }}"
                    >{{ pages.lastPage }}
                    </a>
                </li>
            {% endif %}

            {% if pages.nextPage %}
                <li  class="page-item">
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.nextPage})) }}" class="page-link next"></a>
                </li>
            {% endif %}
            {% if not pages.nextPage %}
                <li class="page-item disabled">
                    <a class="page-link next"></a>
                </li>
            {% endif %}
            {% if pages.lastPage != pages.currentPage %}
                <li class="page-item">
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pages.lastPage})) }}"
                       class="page-link">{{ "fin"|trans }}</a>
                </li>
                {% else %}
                    <li  class="page-item disabled">
                        <a class="page-link"> {{ "fin"|trans }} </a>
                    </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
