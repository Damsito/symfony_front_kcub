{% trans_default_domain 'alerte' %}

<div class="mt-2">
    <div class="row">
        <div class="d-flex">

        </div>
    </div>
    {% if services|length > 0%}
        <table class="table">
            <thead>
            <tr>
                <th class="title services_alertes_code" scope="col">Service</th>
                <th class="title services_alertes_alertes" scope="col">
                    {{ "alertes"| trans }}
                </th>
                <th

                        class="title services_alertes_interlocuteur"
                        scope="col"
                >
                    {{ "interlocuteur"|trans }}
                </th>
                <th class="services_alertes_edition"></th>
            </tr>
            </thead>
            <tbody>
            {% for service in services %}
                {% include 'alerte/item.html.twig' with {"service": service} %}
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(services) }}
        </div>
        {% else %}
            <h1 class="mt-3 text-center">
                {{ "aucun_service"|trans }}
            </h1>
    {% endif %}

</div>